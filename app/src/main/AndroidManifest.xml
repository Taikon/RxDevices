<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guanjieshen.testapplication">

    <application
        android:allowBackup="true"
        android:icon="@drawable/rxlogo"
        android:label="RXDevices"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="RXDevices"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".inhaler_menu"
            android:label="Inhalers"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guanjieshen.testapplication.MainActivity" />
        </activity>
        <activity
            android:name=".Diskus"
            android:label="Diskus Inhaler"
            android:parentActivityName=".inhaler_menu"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guanjieshen.testapplication.inhaler_menu" />
        </activity>
    </application>

</manifest>
